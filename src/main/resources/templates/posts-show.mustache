{{>layout/header}}
<h1>게시글 수정</h1>
<div class="col-md-12">
    <div class="col-md-4">
        {{#post}}
            <div>
                {{id}}
            </div>
            <div>
                {{title}}
            </div>
            <div>
                {{author}}
            </div>
            <div>
                {{content}}
            </div>
        <a href ="/" role="button" class="btn btn-secondary">취소</a>
        <a href ="/posts/update/{{id}}" role="button" class="btn btn-primary">수정</a>
        <a href ="/comments/show/{{id}}" role="button" class="btn btn-primary">댓글보기</a>
        <a href ="/comments/save/{{id}}" role="button" class="btn btn-primary">댓글작성</a>
        {{/post}}
    </div>
</div>
{{>layout/footer}}