{{>layout/header}}
    <div class="col-md-12">
        <br>
        <table class="post_table">
            <thead class="post_table_head">
                <tr>
                    <th class="id">번호</th>
                    <th class="title">제목</th>
                    <th class="author">작성자</th>
                    <th class="date">날짜</th>
                </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td onmouseover="this.parentElement.style.backgroundColor='#f1f1f1'" onmouseout="this.parentElement.style.backgroundColor=''"><a href="/posts/show/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
        <div class="below_table">
            <a href = "/posts/save" role="button" class="a_button">글쓰기</a>
        </div>
    </div>
{{>layout/footer}}