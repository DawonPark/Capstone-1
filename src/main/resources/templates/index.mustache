{{>layout/header}}
    <h1>ㅠㅠ</h1>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href = "/posts/save" role="button" class="btn btn-primary">글 등록</a>
                <a href = "/admin" role="button" class="btn btn-primary">관리자 페이지</a>
            </div>
        </div>
        <br>
        <table class="table table-horizontal table-bordered">
            <thead class="thrad-strong">
                <tr>
                    <th>게시글 번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>최종 수정일</th>
                </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <th>{{id}}</th>
                    <td><a href="/posts/show/{{id}}">{{title}}</a></td>
                    <th>{{author}}</th>
                    <th>{{modifiedDate}}</th>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
{{>layout/footer}}