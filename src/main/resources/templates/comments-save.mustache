<div class="input_page">
    <form>
        <div class="form_group">
            <input type="text" class="input" id="author" placeholder="작성자를 입력하세요">
        </div>
        <div class="form_group">
            <textarea class="input" id="content" placeholder="내용을 입력하세요"></textarea>
        </div>
        <div>
            <input type="textarea" class="form-control" id="pid" style="display:none" value="{{post.id}}" readonly>
        </div>
    </form>
    <div class="input_below">
        <a href="/posts/show/{{post.id}}" role="button" id="a_cancel_button">취소</a>
        <button type="button" class="button" id="btn-comment-save">등록</button>
    </div>
</div>