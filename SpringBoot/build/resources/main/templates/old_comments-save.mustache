{{>layout/header}}
<h1>댓글 작성</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="author" placeholder="작성자를 입력하세요">
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group">
                <input type="textarea" class="form-control" id="pid" style="display:none" value="{{post.id}}" readonly>
            </div>
        </form>
        <a href="/posts/show/{{post.id}}" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-comment-save">등록</button>
    </div>
</div>
{{>layout/footer}}